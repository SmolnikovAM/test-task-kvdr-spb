{
  "name": "kvadro-spb",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "better-npm-run start",
    "dev": "better-npm-run dev",
    "seed": "better-npm-run seed",
    "create-tables-dev": "better-npm-run create-tables-dev",
    "create-tables-prod": "better-npm-run create-tables-prod",
    "test": "jest",
    "test:unit": "better-npm-run test:unit",
    "test:e2e": "better-npm-run test:e2e"
  },
  "betterScripts": {
    "start": {
      "command": "node ./app.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "nodemon ./app.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "create-tables-dev": {
      "command": "node ./scritps/createSchema.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "create-tables-prod": {
      "command": "node ./scritps/createSchema.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "seed": {
      "command": "node ./scripts/seed.js"
    },
    "test:unit": {
      "command": "jest .unit"
    },
    "test:e2e": {
      "command": "jest .e2e"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "overrides": [
      {
        "files": [
          "**/?(*.)+(test|unit).js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "jest": {
    "testMatch": [
      "**/?(*.)+(test|unit).js"
    ]
  },
  "author": "Smolnikov Andrei",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.8.1",
    "better-npm-run": "^0.1.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "mysql": "^2.16.0",
    "parse-strings-in-object": "^1.2.0",
    "rc": "^1.2.8",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "jest": "^24.0.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "supertest": "^3.4.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
